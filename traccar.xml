<?xml version='1.0' encoding='UTF-8'?>
<config>
    <!-- Web server port (Render provides PORT environment variable) -->
    <entry key='web.port'>${PORT}</entry>

    <!-- Database Configuration (H2 for simple setups) -->
    <entry key='database.driver'>org.h2.Driver</entry>
    <entry key='database.url'>jdbc:h2:/var/traccar/data/database</entry>
    <entry key='database.user'>sa</entry>
    <entry key='database.password'></entry>

    <!-- Logging -->
    <entry key='logger.level'>info</entry>

    <!-- Server parameters -->
    <entry key='server.timeout'>300</entry>
    <entry key='server.enableWeb'>true</entry>
    <entry key='server.address'>0.0.0.0</entry>

    <!-- Example device communication ports -->
    <entry key='protocols.enable'>true</entry>
    <entry key='geocoder.enable'>true</entry>
    <entry key='geocoder.type'>nominatim</entry>
    <entry key='geocoder.url'>https://nominatim.openstreetmap.org</entry>
</config>

